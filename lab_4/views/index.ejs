<!DOCTYPE html>
<html lang="uk">
  <head>
    <meta charset="UTF-8" />
    <title>Викладачі кафедри</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <div class="container mt-5">
      <h1 class="text-center mb-4">Викладачі кафедри</h1>

      <!-- Форма додавання викладача -->
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <form method="POST" action="/add" class="row g-3">
            <div class="col-md-3">
              <input
                class="form-control"
                name="surname"
                placeholder="Прізвище"
                required
              />
            </div>
            <div class="col-md-3">
              <input
                class="form-control"
                name="position"
                placeholder="Посада (доцент, професор...)"
                required
              />
            </div>
            <div class="col-md-3">
              <input
                class="form-control"
                name="degree"
                placeholder="Ступінь (к.т.н., д.т.н...)"
                required
              />
            </div>
            <div class="col-md-3">
              <input
                class="form-control"
                name="room"
                placeholder="№ аудиторії"
                required
              />
            </div>
            <div class="col-12 text-end">
              <button type="submit" class="btn btn-primary">Додати</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Таблиця викладачів -->
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="h5 mb-3">Список викладачів</h2>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Прізвище</th>
                <th>Посада</th>
                <th>Ступінь</th>
                <th>Аудиторія</th>
                <th>Дії</th>
              </tr>
            </thead>
            <tbody>
              <% teachers.forEach(t => { %>
              <tr>
                <td><%= t.id %></td>
                <td><%= t.surname %></td>
                <td><%= t.position %></td>
                <td><%= t.degree %></td>
                <td><%= t.room %></td>
                <td>
                  <a
                    href="/edit/<%= t.id %>"
                    class="btn btn-sm btn-warning"
                    >Редагувати</a
                  >
                  <form
                    method="POST"
                    action="/delete/<%= t.id %>"
                    style="display: inline"
                  >
                    <button type="submit" class="btn btn-sm btn-danger">
                      Видалити
                    </button>
                  </form>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>

          <p class="mt-3">
            API: <a href="/api/teachers">/api/teachers</a>
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
